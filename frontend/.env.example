# Frontend Environment Variables
# Copy this file to .env.local and .env.test for local development

# Node Environment
NODE_ENV=development

# Backend Service URLs (Local Development)
# These connect to services running locally (e.g., via Tilt or docker-compose)
AUTH_SERVICE_URL=http://localhost:4001
BID_SERVICE_URL=http://localhost:4002
USER_STATS_SERVICE_URL=http://localhost:4003
JWT_PUBLIC_KEY_PATH=../.data/keys/public.pem
JWT_ISSUER=auth-service
SECURE_COOKIE=false


# Optional: Skip env validation during build (useful for Docker builds)
# SKIP_ENV_VALIDATION=true
